   package com.idn.backend.ExceptionHandler;

import java.io.IOException;
import java.time.LocalDateTime;

import org.springframework.http.HttpStatus;
import org.springframework.security.core.AuthenticationException;
import org.springframework.security.web.AuthenticationEntryPoint;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class CustomeExcceptionEntryPointHandler implements AuthenticationEntryPoint {

        @Override
        public void commence(HttpServletRequest request, HttpServletResponse response,
                        AuthenticationException authException) throws IOException, ServletException {
                LocalDateTime curreDateTime = LocalDateTime.now();
                String message = (authException != null && authException.getLocalizedMessage() != null)
                                ? authException.getMessage()
                                : "Unautherized";
                String path = request.getRequestURI();

                response.setHeader("IDN-error-rason", "Authentication failed");
                response.setStatus(HttpStatus.UNAUTHORIZED.value());
                response.setContentType("application/json:charset=UTF-8");

                String jsonResponse = String.format(
                                "{\"timestamp\":\"%s\",\"status\":%d,\"error\":\"%s\",\"message\":\"%s\",\"path\":\"%s\"}",
                                curreDateTime, HttpStatus.UNAUTHORIZED.value(),
                                HttpStatus.UNAUTHORIZED.getReasonPhrase(), message,
                                path);
                response.getWriter().write(jsonResponse);

        }

}
